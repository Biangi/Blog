<!DOCTYPE html>
<html lang="en">

<head>
    <title>
        注册
      </title>
    <%- include('head',{}) %>
    <style>
        body {
            height: 700px;
            background: linear-gradient(to bottom right,  rgb(85, 187, 235),rgb(236, 182, 138));
        }

        .layui-form {
            height: 350px;
            width: 400px;
            margin: 0 auto;
            text-align: center;
        }

        .layui-input-block {
            margin: 0;
        }

        .txt {

            margin: 20px;
        }

        .span {
            margin: 0 auto;
        }

        .layui-btn {
            width: 400px;
        }
    </style>
</head>

<body>
    <div class="layui-container">
        <div class="layui-row">
            <form class="layui-form"  action="users/addUser" method="post">
                <h1 class="txt">用户注册</h1>
                <div class="layui-form-item item">
                    <!-- <label class="layui-form-label">用户名</label> -->
                    <div class="layui-input-block">
                        <input type="text" name="userName"  placeholder="请输入账号" autocomplete="off"
                            class="layui-input">
                    </div>
                </div>

                <div class="layui-form-item item">
                    <!-- <label class="layui-form-label">密码</label> -->
                    <div class="layui-input-block">
                        <input type="password" name="password"  placeholder="请输入密码" autocomplete="off"
                            class="layui-input">
                    </div>

                </div>

                <div class="layui-form-item item">
                    <!-- <label class="layui-form-label">密码</label> -->
                    <div class="layui-input-block">
                        <input type="password" name="passwordC" required placeholder="确认密码" autocomplete="off"
                            class="layui-input">
                    </div>

                </div>

                <div class="layui-form-item">
                    <div class="layui-input-block blo">
                        <button class="layui-btn">注册</button>

                    </div>
                </div>
                <span class="span">已有账号，<a href="/login">去登陆</a></span>
            </form>
        </div>
    </div>
</body>

</html>